<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tyron.o2o.dao.ProductCategoryDao">

	<select id="selectProductCategoryList" resultType="com.tyron.o2o.entity.ProductCategory" parameterType="Long">
		select product_category_id, 
		product_category_name, priority,
		create_time, shop_id
		from tb_product_category
		WHERE shop_id = #{shopId}
		order by priority desc
	</select>
	
	<insert id="batchInsertProductCategory" parameterType="java.util.List">
		INSERT INTO tb_product_category(product_category_name,shop_id,priority,create_time)
		VALUES
		<foreach collection="list" item="productCategory" index="index" separator=",">
			(
				#{productCategory.productCategoryName},
				#{productCategory.shopId},
				#{productCategory.priority},
				#{productCategory.createTime}
			)
		</foreach>
	</insert>
	
	<delete id="deleteProductCategory">
		DELETE FROM 
			tb_product_category
		WHERE 
			product_category_id = #{productCategoryId}
			and 
			shop_id = #{shopId}
	</delete>
</mapper>